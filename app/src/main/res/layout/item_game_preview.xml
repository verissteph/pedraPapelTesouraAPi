<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">



    <TextView
        android:id="@+id/tvPlayerMove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Player Move"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#E0E0E0"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvOpponentMove"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOpponentMove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Opponent Move"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#B3E5FC"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPlayerMove"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
